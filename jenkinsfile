pipeline {
    agent any

    environment {
    SVC_ACCOUNT_KEY = credentials('jenkins-auth')
  }
     
    stages {
              stage ('checkout'){
            steps {
                git branch: 'main', url: 'https://github.com/kalkirs/gcp-devops.git'
            }
        }
		stage('Set creds') {
            steps {
              
                sh 'echo $SVC_ACCOUNT_KEY | base64 -d > ./gcp/jenkins.json'
		            sh 'pwd'
		    sh 'cd gcp'
                       
               
            }
        }
	
	stage('Auth-Project') {
	 steps {
		 dir('gcp')
	{
        sh 'ls -ltr'
	sh 'pwd'
        sh 'gcloud auth activate-service-account jenkins@raakilabs.iam.gserviceaccount.com --key-file=jenkins.json'
    }
    }
	}
 	 
	stage('Create GKE cluster') {
	 steps {
    
        sh 'gcloud container clusters create gke-cluster --zone europe-central2-a --num-nodes=1 --project raakilabs'
    }
    }
    
    stage('Get creds from GKE cluster') {
	 steps {
    
        sh 'gcloud container clusters get-credentials gke-cluster --zone europe-central2-a --project raakilabs'
    }
    }
    
    stage('App Deploy') {
	 steps {
	 dir('google-compute-engine')
			 {
        /* Below command specifies exactly like the command line */
    
        sh 'kubectl apply -f deployment.yaml'
	sh 'sleep 60s'
	
    }
    }
    }
    
    }
}
